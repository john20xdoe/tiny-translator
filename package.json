{
  "name": "tiny-translator",
  "description": "A tiny web application to translate xliff files",
  "version": "0.13.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --aot",
    "start-failtests": "ng serve --env=failtests",
    "format": "npx prettier --write '**/*.{ts,html,scss}'",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "extract-html": "ng xi18n --configuration",
    "extract-ts": "npx ngx-extractor -i \"./src/**/*.ts\" -f xlf -o src/i18n/messages.xlf --locale",
    "extract": "xAll(){ npm run extract-html -- ${1:-en} && npm run extract-ts -- ${1:-en} ;};xAll",
    "postextract": "ng run tiny-translator:xliffmerge",
    "extract:de": "npm run extract -- de",
    "extract:fr": "npm run extract -- fr",
    "extract:ru": "npm run extract -- ru",
    "start-en": "npm run start -- --configuration=development",
    "start-de": "npm run start -- --configuration=development-de",
    "start-fr": "npm run start -- --configuration=development-fr",
    "start-ru": "npm run start -- --configuration=development-ru",
    "build-prod": "npm run build-prod-en && npm run build-prod-de && npm run build-prod-fr && npm run build-prod-ru && cpx './src/ghpages/*' './dist'",
    "build-prod-en": "cross-env-shell LANG=\"en\" npm run build-prod-lang",
    "build-prod-de": "cross-env-shell LANG=\"de\" npm run build-prod-lang",
    "build-prod-fr": "cross-env-shell LANG=\"fr\" npm run build-prod-lang",
    "build-prod-ru": "cross-env-shell LANG=\"ru\" npm run build-prod-lang",
    "ngsw-config-lang": "cross-env-shell ngsw-config dist/$LANG src/ngsw-config.json /tiny-translator/$LANG",
    "ngsw-copy-lang": "cross-env-shell cpx node_modules/@angular/service-worker/ngsw-worker.js dist/$LANG/ && cross-env-shell replace /ngsw.json /tiny-translator/$LANG/ngsw.json dist/$LANG/ngsw-worker.js",
    "prebuild-prod-lang": "cross-env-shell replace %BASE_HREF% /tiny-translator/$LANG/ src/environments/environment.prod.ts",
    "build-prod-lang": "cross-env-shell ng build --prod --aot --configuration=$LANG && cross-env-shell npm run ngsw-config-lang && cross-env-shell npm run ngsw-copy-lang",
    "postbuild-prod-lang": "cross-env-shell replace /tiny-translator/$LANG/ %BASE_HREF% src/environments/environment.prod.ts",
    "serve-prod-ngsw": "npm run build-prod-en && http-server dist/en -p 8080",
    "serve-prod": "http-server buildtest -p 8080",
    "publish:ghpages": "angular-cli-ghpages --no-silent",
    "build:docker": "docker build -t tiny-translator:$DOCKER_TAG .",
    "publish:dockerhub": "docker push $DOCKER_ID_USER/tiny-translator:$DOCKER_TAG",
    "echox": "cross-env-shell X=\"aValue\" Y=\"anotherValue\" npm run echo",
    "echo": "cross-env-shell echo lmaa $X $Y && cross-env-shell echo lmaa2 $Y $X"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/john20xdoe/tiny-translator.git"
  },
  "keywords": [
    "i18n",
    "tooling",
    "angular",
    "xliff",
    "angular7"
  ],
  "author": "Martin Roob <martinroob65@gmail.com> (www.roobsoft.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/john20xdoe/tiny-translator/issues"
  },
  "homepage": "https://github.com/john20xdoe/tiny-translator#readme",
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/flex-layout": "^7.0.0-beta.24",
    "@angular/forms": "^7.2.15",
    "@angular/http": "^7.2.15",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "@angular/service-worker": "^7.2.15",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "angular-cli-ghpages": "^0.5.3",
    "core-js": "^2.4.1",
    "file-saver": "^1.3.3",
    "flag-icon-css": "^2.8.0",
    "hammerjs": "^2.0.8",
    "ngx-i18nsupport-lib": "^1.7.0",
    "rxjs": "^6.5.2",
    "zone.js": "^0.8.27"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "^7.3.7",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "@ngx-i18nsupport/tooling": "^1.1.2",
    "@ngx-i18nsupport/ngx-i18nsupport": "^1.1.2",
    "codelyzer": "^4.0.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngx-i18nsupport": "^0.17.1",
    "protractor": "~5.1.2",
    "replace": "^1.1.0",
    "ts-node": "~8.0.0",
    "tslint": "^5.18.0",
    "typescript": "3.2.1"
  }
}
